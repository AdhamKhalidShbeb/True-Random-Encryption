/* ============================================
   True Random Encryption - Light Mode: Zero-Alignment Hardened v2
   ============================================ */

/* === GLOBAL STYLES === */
QMainWindow {
    background-color: #F2F4F7; /* Cool Ash */
    color: #1A1C21; /* Ink */
}

QWidget {
    font-family: "Inter", "Segoe UI", "Roboto", sans-serif;
    font-size: 12px;
    color: #1A1C21;
}

/* === HEADER === */
QLabel#titleLabel {
    font-size: 20pt; /* v2: 20pt */
    font-weight: 600;
    color: #E69500; /* Deep Amber */
    padding: 0px;
    background: transparent;
    letter-spacing: 1px;
    text-transform: uppercase;
}

QLabel#subtitleLabel {
    font-family: "JetBrains Mono", monospace;
    font-size: 10px;
    color: #7A828E;
    font-weight: 400;
    letter-spacing: 1px;
}

/* === SECTION HEADERS === */
QLabel#sectionHeader {
    font-family: "JetBrains Mono", monospace; /* v2: Monospace */
    font-size: 9pt;
    font-weight: bold;
    color: #6A7282;
    letter-spacing: 1px;
    text-transform: uppercase;
    margin-bottom: 4px;
}

/* === SECTIONS (FLATTENED) === */
QWidget#inputSection, QWidget#passwordSection, QWidget#optionsSection {
    background-color: transparent;
    border: none;
    padding: 0px;
}

/* === DROP ZONE === */
QFrame#dropZoneFrame {
    background-color: #E5E7EB; /* Subtle grey */
    border: 1px dashed #D1D5DB;
    border-radius: 4px;
}

QLabel#fileTypeLabel {
    color: #E69500; /* Deep Amber */
    font-weight: 500;
    font-size: 10pt;
    letter-spacing: 0.5px;
}

/* === FILE LIST === */
QListWidget#fileList, QLabel#placeholderLabel {
    background-color: #FFFFFF;
    border: 1px solid #D1D5DB;
    border-radius: 4px;
    color: #6A7282; /* Muted text */
    outline: none;
}

QListWidget#fileList::item {
    padding: 6px 12px;
    border-radius: 4px;
    margin: 1px;
}

QListWidget#fileList::item:hover {
    background-color: rgba(230, 149, 0, 0.05);
}

QListWidget#fileList::item:selected {
    background-color: rgba(230, 149, 0, 0.1);
    color: #000000;
}

/* === LINE EDIT === */
QLineEdit {
    background-color: #FFFFFF;
    border: 1px solid #D1D5DB;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding-left: 12px;
    color: #1A1C21;
    font-size: 11pt;
    selection-background-color: #E69500;
    selection-color: #FFFFFF;
}

QLineEdit:focus {
    border: 1px solid #E69500;
}

/* === PROGRESS BARS (STRENGTH BAR) === */
QProgressBar#strengthBar {
    border: none;
    background-color: #E5E7EB;
    height: 2px;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
}

QProgressBar#strengthBar::chunk {
    background-color: #E69500;
}

QLabel#strengthLabel {
    font-family: "JetBrains Mono", monospace;
    font-size: 9px;
    color: #888888;
}

/* === BUTTONS === */
QPushButton {
    background-color: #F3F4F6;
    border: 1px solid #E5E7EB;
    border-radius: 4px;
    padding: 6px 12px;
    color: #1A1C21;
    font-weight: 500;
    font-size: 11px;
    text-transform: uppercase;
}

QPushButton:hover {
    background-color: #E5E7EB;
    color: #000000;
}

/* Icon Buttons (Integrated) */
QPushButton#browseFileButton, QPushButton#browseFolderButton, QPushButton#clearButton {
    background-color: transparent;
    border: none;
}

QPushButton#browseFileButton:hover, QPushButton#browseFolderButton:hover, QPushButton#clearButton:hover {
    background-color: rgba(0, 0, 0, 0.05);
}

/* Primary Action Buttons */
QPushButton#encryptButton, QPushButton#decryptButton {
    font-size: 12pt;
    font-weight: bold;
    border-radius: 4px;
    letter-spacing: 1px;
    text-transform: uppercase;
}

QPushButton#encryptButton {
    background-color: #E69500; /* Deep Amber */
    border: none;
    color: #FFFFFF;
}

QPushButton#encryptButton:hover {
    background-color: #FFB000;
}

QPushButton#decryptButton {
    background-color: transparent;
    border: 1.5px solid #E69500; /* v2: 1.5px Ghost Style */
    color: #E69500;
}

QPushButton#decryptButton:hover {
    background-color: rgba(230, 149, 0, 0.1);
}

/* Theme Toggle Button */
QPushButton#themeToggleButton {
    background-color: transparent;
    border: none;
    font-size: 16px;
}

/* === COMBO BOX === */
QComboBox {
    background-color: #FFFFFF;
    border: 1px solid #D1D5DB;
    border-radius: 4px;
    padding-left: 12px;
    color: #1A1C21;
}

QComboBox:hover {
    border: 1px solid #E69500;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 24px;
    border-left: 1px solid #D1D5DB;
    background: transparent;
}

QComboBox::down-arrow {
    image: url(:/combo_arrow.svg);
    width: 10px;
    height: 10px;
}

QComboBox QAbstractItemView {
    background-color: #FFFFFF;
    border: 1px solid #E69500;
    selection-background-color: #E69500;
    selection-color: #FFFFFF;
    color: #1A1C21;
    outline: none;
}

/* === CHECKBOX === */
QCheckBox {
    spacing: 8px;
    color: #1A1C21;
}

QCheckBox::indicator {
    width: 14px;
    height: 14px;
    border-radius: 2px;
    border: 1px solid #D1D5DB;
    background-color: #FFFFFF;
}

QCheckBox::indicator:hover {
    border: 1px solid #E69500;
}

QCheckBox::indicator:checked {
    background-color: #E69500;
    border: 1px solid #E69500;
}

/* === PROGRESS BARS (MAIN) === */
QProgressBar#mainProgressBar {
    background-color: #F3F4F6;
    border: 1px solid #D1D5DB;
    border-radius: 4px;
    text-align: center;
    color: #1A1C21;
    font-weight: 700;
}

QProgressBar#mainProgressBar::chunk {
    background-color: #E69500;
    border-radius: 2px;
}

/* === STATUS STRIP === */
QLabel#statusLabel {
    font-family: "Inter", sans-serif;
    font-size: 10px;
    font-weight: 500;
    color: #666666;
    padding: 0px;
    background-color: transparent;
    border: none;
}

QLabel#detailLabel {
    font-family: "JetBrains Mono", monospace;
    font-size: 9px;
    color: #999999;
}

/* === SCROLLBAR === */
QScrollBar:vertical {
    background: #F2F4F7;
    width: 8px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background: #D1D5DB;
    min-height: 20px;
    border-radius: 4px;
}

QScrollBar::handle:vertical:hover {
    background: #E69500;
}

/* === TOOLTIPS === */
QToolTip {
    background-color: #FFFFFF;
    border: 1px solid #E69500;
    color: #1A1C21;
    padding: 4px;
    border-radius: 4px;
}
